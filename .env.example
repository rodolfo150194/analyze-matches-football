# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database
DATABASE_URL=sqlite:///db.sqlite3

# API Keys
API_KEY_ODDS=your-odds-api-key-here

# SofaScore Scraping Configuration
# IS_VPS: Activa modo VPS con anti-detección completa
# - false (default): Modo local simple, sin stealth, navegador visible
# - true: Modo VPS con stealth, headless, delays largos
IS_VPS=false

# USE_STEALTH: Activa playwright-stealth (solo funciona si IS_VPS=true)
# - false (default): Sin playwright-stealth
# - true: Activa playwright-stealth para ocultar automatización
USE_STEALTH=false

# Configuración de ejemplo para diferentes entornos:

# DESARROLLO LOCAL (por defecto):
# IS_VPS=false
# USE_STEALTH=false
# Resultado: Navegador visible, sin delays largos, sin anti-detección

# VPS SIN STEALTH:
# IS_VPS=true
# USE_STEALTH=false
# Resultado: Headless, delays largos, scripts anti-detección básicos

# VPS CON STEALTH (recomendado para VPS):
# IS_VPS=true
# USE_STEALTH=true
# Resultado: Headless, delays largos, playwright-stealth, anti-detección completa
